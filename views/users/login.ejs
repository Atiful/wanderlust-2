<%- layout('layouts/boilerplate') %>

<body>
    <form class = "container-fluid row justify-content-center mt-1" method ="post" action = "/login">
         <div  class = "col-md-7 my-2">
            <h2>Login on WanderLust</h2>
         </div>
        <div class="form-group col-md-7 mt-2 mb-2">
            <label for="username">Enter Username</label>
            <input type="text" value = "demo2" class="form-control" name = "username" id="username"  placeholder="enter username" required>
          </div>

        <div class="form-group col-md-7">
          <label for="Password">Password</label>
          <input type="password" value = "123" name = "password" class="form-control" id="Password" placeholder="Password" required>
        </div>



        <div class="col-md-7 mt-3">
            <button class = "btn btn-danger google-auth"><a href="/auth/google"><i class="fa-brands fa-google"></i>Google</a></button>
        </div>

        <div class="col-md-7 mt-3">
          <p>Don't have an account? <a href="/signup">Register here</a> instead.</p> 
        </div>


        <div class="mt-3 text-center">
        <button type="submit" class="btn btn-outline-success">Submit</button>
       </div>
      </form>
</body>


