<% layout('/layouts/boilerplate') -%>
<body>



    <form action="/listings/<%= listing.id %>?_method=PUT" method ="post" class="form" enctype="multipart/form-data">
        <div>
            <h3 class="edit-heading">Edit your Listing : <%= listing.title %></h3>
        </div>
        <div class="form-group mb-3">
            <label for="title">Title</label>
             <input type="text" class="form-control" value = "<%= listing.title %>" id = "title" placeholder = "enter title" name = listing[title] required>
        </div>

        <div class="form-group mb-3">
            <label for="description">Description</label>
            <textarea  class="form-control" name = listing[description] id="description" placeholder="enter description" required><%= listing.description %></textarea>
        </div>

        <div class="form-group mb-3">
            <button class="btn preview btn-outline-dark"><a href="<%= listing.image.url %>">preview old Image</a></button>
        </div>
    
        <div class="form-group mb-3">
            <label for="url">upload new Image</label>
           <input type="file" class="form-control" placeholder="enter url" name = "listing[image]" id = "url">
        </div>

        <div class="form-group mb-3">
            <label for="number">Price</label>
           <input type="number" value = "<%= listing.price %>" class="form-control" placeholder="enter number" name = "listing[price]" id = "number" required>
        </div>

        <div class="form-group mb-3">
            <label for="location">Location</label>
            <input type="text" class="form-control" value = "<%= listing.location %>" placeholder="enter location" name = "listing[location]" id = "location" required>
        </div>

        <div class="form-group mb-3">
            <label for="country">Country</label>
            <input type="text" class="form-control" value = "<%= listing.country %>" placeholder="enter country" name = "listing[country]" id = "country" required>
        </div>
        <div class="button">
        <button class="btn btn-success my-2" type = "submit">submit</button>
       </div>
    </form>


    
</body>